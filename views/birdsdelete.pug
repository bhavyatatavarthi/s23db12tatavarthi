extends layout
block content
 h1= title
 if (toShow == null)
  h2 No instance to delete
 else
  - let birdsid = toShow.id
  - let birdsname = toShow.Name
  - let birdscolor = toShow.color
  - let birdsage = toShow.Age
  - let actionid = "/resource/birds/" + birdsid
 script let actionid = "#{actionid}"
 div
  div.row
   div(class='birdsAttr mr-3') Birds ID is:
   div #{birdsid}
  div.row
   div(class='birdsAttr mr-3') Birds Name is:
   div #{birdsname}
  div.row
   div(class='birdsAttr mr-3') Birds color is:
   div #{birdscolor}
  div.row
   div(class='birdsAttr mr-3') Birds Age is:
   div #{birdsag}
 button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
 button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

 script.
  function cancel() {
   // Go back to the home page for the costume collection
   window.location.href='/birds'
  }
 script.
  function deleteOnid() {
   console.log("starting delete")
   // delete first
   fetch(actionid, {
    method: 'DELETE' // Don't need a body for the delete
   }).then((resp) => {
    return resp.json(); // or resp.text() or whatever the server sends
   }).then((body) => {
    alert("Delete succeded")
    window.location.href='/birds'
    // TODO handle body
   }).catch((error) => {
    // TODO handle error
    alert("Delete failed " + error )
   });
  }
